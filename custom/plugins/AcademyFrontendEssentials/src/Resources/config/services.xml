<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Product Debug Subscriber -->
        <service id="Academy\Subscriber\ProductDebugSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
        
        <!-- Product Detail Controller -->
        <service id="Academy\Storefront\Controller\ProductDetailController" public="true">
            <argument type="service" id="Shopware\Storefront\Page\Product\ProductPageLoader"/>
        </service>
        
        <!-- Product Debug Command -->
        <service id="Academy\Command\ProductDebugCommand">
            <argument type="service" id="product.repository"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>